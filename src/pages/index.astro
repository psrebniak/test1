---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import Layout from '../components/Layout.astro';
import HomePosts from '../components/HomePosts.astro';
import HomeHeader from '../components/HomeHeader.astro';
import { postsAndTags } from '../data/posts';

let title = `Home | My name is Olek. I write about what matters to me.`;
let description = `Hi 👋🏼 I'm Olek. Here I write about what matters to me. I'm a co-founder of 2 kids 👨‍👩, married happily 💍, and 🍕 lover. My side-projects are: Difree a distraction-free writing app, and domowa.pizza a blog about home-made pizza.`;
let permalink = 'https://olek.works';

let posts = await Astro.glob(`../notes/*.md`);
const { allPosts, allTags } = await postsAndTags(posts);

let page = 'home';
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
  </head>

  <body>
    <Layout page={page} tags={allTags} HeaderComponent={HomeHeader}>
      <HomePosts {allPosts} />
    </Layout>
  </body>
</html>
